{
    "openapi": "3.0.0",
    "info": {
        "title": "My First API",
        "version": "0.1"
    },
    "paths": {
        "/api/mentors": {
            "post": {
                "summary": "Add a new mentor",
                "description": "Add a new mentor to web",
                "operationId": "addMentor",
                "requestBody": {
                    "description": "Create a new mentor in web",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Mentor"
                            }
                        },
                        "application/xml": {
                            "schema": {
                                "$ref": "#/components/schemas/Mentor"
                            }
                        },
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/Mentor"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Mentor"
                                }
                            },
                            "application/xml": {
                                "schema": {
                                    "$ref": "#/components/schemas/Mentor"
                                }
                            }
                        }
                    },
                    "405": {
                        "description": "Invalid input"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Mentor": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 10
                    },
                    "name": {
                        "type": "string",
                        "example": "HUS HUS"
                    },
                    "profile": {
                        "type": "string",
                        "example": "http://localhost:8080/images/1650358795701.png"
                    },
                    "email": {
                        "type": "string",
                        "example": "nhuda55161@gmail.com"
                    },
                    "profession": {
                        "type": "string",
                        "format": "Software Engineer"
                    }
                },
                "xml": {
                    "name": "mentor"
                }
            }
        }
    },
    "requestBodies": {
      "Mentor": {
        "description": "Mentor object that needs to be added to the web",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Mentor"
            }
          },
          "application/xml": {
            "schema": {
              "$ref": "#/components/schemas/Mentor"
            }
          }
        }
      }
    }
}
